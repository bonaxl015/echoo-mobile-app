{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"allowJs": false,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@constants/*": ["constants/*"],
			"@features/*": ["features/*"],
			"@services/*": ["services/*"],
			"@store/*": ["store/*"],
			"@utils/*": ["utils/*"],
			"@theme/*": ["theme/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
