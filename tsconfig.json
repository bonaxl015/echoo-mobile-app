{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"allowJs": false,
		"paths": {
			"@app/*": ["./src/app/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@config/*": ["./src/config/*"],
			"@constants/*": ["./src/constants/*"],
			"@features/*": ["./src/features/*"],
			"@provider/*": ["./src/provider/*"],
			"@services/*": ["./src/services/*"],
			"@store/*": ["./src/store/*"],
			"@utils/*": ["./src/utils/*"],
			"@theme/*": ["./src/theme/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
